<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gd.zhenghy.activity.ChangePhoneNumber">
    <include
        android:id="@+id/changeAddress_title"
        layout="@layout/titlebar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Address Details"
        android:paddingLeft="10dp"
        android:background="@color/colorSettingBg"
        android:gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_name_settings"
            android:hint="#,Building name"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"/>
            />
    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_street_settings"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Street"/>

    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_area_settings"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Area"/>
    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_state_settings"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="City/state"/>

    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_country_settings"
            android:textSize="16sp"
            style="@style/TextViewSetting"
            android:text="Country"
            />
    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_code_settings"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Pin code/Zip code"/>
    </LinearLayout>
    <View
        style="@style/ViewLine"
        />
    <View
        android:id="@+id/vCountryMasker"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
