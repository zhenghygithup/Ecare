<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gd.zhenghy.ecaretest.ChangePhoneNumber">
    <include
        android:id="@+id/changePassword_title"
        layout="@layout/titlebar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Phone number"
        android:paddingLeft="10dp"
        android:background="@color/colorSettingBg"
        android:gravity="center_vertical"
        />
    <LinearLayout
        android:id="@+id/ll_changePassword_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:textSize="16sp"
            style="@style/TextViewSetting"
            android:text="Select Country"
            />
        <TextView
            android:id="@+id/tv_selectCountry"
            android:textSize="16sp"
            android:textColor="@color/title_bg"
            style="@style/TextViewSetting"
            android:text="Country"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#9c9999"
        />
    <LinearLayout
        android:id="@+id/ll_changeNumber_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_countryCode"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="code"/>
        <EditText
            android:id="@+id/et_phoneNumber"
            android:singleLine="true"
            style="@style/TextViewSetting"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@null"
            android:text="number"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#9c9999"
        />
    <View
        android:id="@+id/vMasker"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
