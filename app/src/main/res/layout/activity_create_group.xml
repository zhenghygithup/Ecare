<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gd.zhenghy.activity.LoginActivityTest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingTop="20dp"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/titlebar"
            android:id="@+id/titleBar_CreateGroup"/>
            <RelativeLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.gd.zhenghy.view.RoundImagview
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_photo_signUp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/photo_ring_white"
                    android:src="@mipmap/user_blank"/>
                <ImageView
                    android:id="@+id/iv_camera_signUp"
                    android:src="@mipmap/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="50dp"
                    android:layout_alignRight="@+id/iv_photo_signUp"
                    android:layout_alignEnd="@+id/iv_photo_signUp"/>
            </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Information"/>
        <View
            android:paddingTop="3dp"
            style="@style/ViewLine"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Enter name for group"/>
        <View
            android:paddingTop="3dp"
            style="@style/ViewLine"
            />

    </LinearLayout>

</ScrollView>
