<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gd.zhenghy.activity.LoginActivityTest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:tint="@color/title_bg"/>
            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:src="@mipmap/logo"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In order to recieve Reset password link enter the address you have provide at the time of registration"
                android:padding="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/password_input"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mail"
                    />
                <EditText
                    android:id="@+id/et_forgotPassword_sendEmail"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="E-mail address"
                    android:singleLine="true"
                    android:imeActionId="@+id/Send"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionSend"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/iv_forgotPassword_sendEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Send email"
                android:gravity="center"
                android:textSize="@dimen/txt_title"
                android:textColor="@color/txt_white"
                android:textAllCaps="false"
                android:background="@drawable/btn_green"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btn_forgotPassword_signInFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign in with Facebook"
                    android:gravity="center"
                    android:textSize="@dimen/txt_title"
                    android:textColor="@color/txt_white"
                    android:textAllCaps="false"
                    android:background="@null"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/facebook_icon"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
