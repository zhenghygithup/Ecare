<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.gd.zhenghy.fragments.GroupFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ll_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        >


        <ImageView
            android:paddingTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/groups_blank"
            />
        <TextView
            style="@style/TextViewTitle"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingTop="50dp"
            android:text="Hi zhenghy"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Currently you dont have any group to interact.Create group and start sharing thoughts with them."/>
    </LinearLayout>
    <com.gd.zhenghy.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.gd.zhenghy.view.MyListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lv_group_selectGroup">
        </com.gd.zhenghy.view.MyListView>

    </com.gd.zhenghy.view.ReboundScrollView>







</RelativeLayout>
